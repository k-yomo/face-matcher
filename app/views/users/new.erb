<main class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <h2>Sign up</h2>
    <form action="/users" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label for="first_name">First Name</label>
        <input type="text" name="user[first_name]" id="first_name" class="form-control">
      </div>

      <div class="form-group">
        <label for="last_name">Last Name</label>
        <input type="text" name="user[last_name]" id="last_name" class="form-control">
      </div>

      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" name="user[email]" id="email" class="form-control">
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" name="user[password]" id="password" class="form-control">
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
              <label for="self-face">Your Face</label>
              <input type="file" name="face1" id="self-face" class="form-control-file">
          </div>
        </div>

        <div class="col-md-6">
          <div class="form-group">
              <label for="ideal-face">Your Ideal Face</label>
              <input type="file" name="face2" id="ideal-face" class="form-control-file">
          </div>
        </div>
      </div>

      <button type="submit" class="btn btn-secondary">Submit</button>
    </form>
  </div>
</main>
